<%- include('partials/header.ejs') %>

<body class="homepage is-preload">
	<div id="page-wrapper">

		<!-- Header -->
			<section id="header">

				<!-- Logo -->
					<h1><a href="/">Homework Bound</a></h1>

					<!-- Banner -->
						<section id="banner">

							<header>
								<!-- injection -->
								<h1>Todos</h1>
								<ul>
								<% todos.forEach( el => { %>
										<li class='todoItem' data-id='<%=el._id%>'>
											<span class='<%= el.completed === true ? 'completed' : 'not'%>'><%= el.todo %></span>
											<span><%= el.dueDate %></span> 
											<form action="/todos" method="put" class="edit hidden">
												<textarea class="task-description">
								  				<%= el.todo %></textarea>
												  <button class="btn edit" type="submit" >Edit</button>
											
											  </form>
											 <span class="editbtn"> Edit</span>
											<span class='del'> Delete </span>
										</li>
								<% }) %>    
								</ul>
							
								<h2><%= user.userName %> has <%= left %> thing(s) left to do.</h2>
							
								<form action="/todos/createTodo" method='POST'>
									<input type="text" placeholder="Enter Todo Item" name='todoItem'>
									<input type="date" name='todoDueDate'>
									<input type="submit">
								</form>
							
								<a href="/logout">Logout</a>
							
								<script src="js/main.js"></script>
								<!-- injection  -->
								<h2>Howdy. This is Dopetrope.</h2>
								<p>A responsive template by HTML5 UP</p>
							</header>
						</section>
				</section>

<%- include('partials/footer.ejs') %>