<%- include('partials/header.ejs') %>

<body class="homepage is-preload">
    <div id="page-wrapper">

        <!-- Header -->
            <section id="header">

                <!-- Logo -->
                    <h1><a href="/">Homework Bound</a></h1>

					<!-- Banner -->
						<section id="banner">
                            <% if (locals.messages.errors) { %>
                                <% messages.errors.forEach( el => { %>
                                    <div class="alert alert-danger"><%= el.msg %></div>
                                <% }) %>    
                            <% } %>
                            <form action="/signup" method="POST" class="textareaWidth">
                                <label>
                                <input type="text" name="userName" placeholder="User Name" class="button large textColor">
                                </label>
                                <label>
                                <input type="email" name="email" placeholder="Email" class="button large textColor">
                                </label>
                                <label>
                                <input type="password" name="password" placeholder="Password" class="button large textColor">
                                </label>
                                <label>
                                <input type="password" name="confirmPassword" placeholder="Confirm Password" class="button large textColor">
                                </label>
                                <label>
                                <input type="submit" class="button">
                                </label>
                            </form>
						</section>
				</section>

<%- include('partials/footer.ejs') %>